<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/tvTitleOfSuggestionDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suggest an item"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvTitleOfSuggestionDialog2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitleOfSuggestionDialog"
        android:layout_marginTop="3dp"
        android:text="(We will do our best to include this item in the shop as soon as possible.)"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/suggestionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitleOfSuggestionDialog2"
        android:layout_marginTop="20dp"
        android:hint="Name of Item" />

    <Button
        android:id="@+id/confirmSuggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/suggestionEditText"
        android:text="Confirm" />

    <Button
        android:id="@+id/cancelSuggestionDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/suggestionEditText"
        android:layout_alignParentRight="true"
        android:text="Cancel" />
</RelativeLayout>